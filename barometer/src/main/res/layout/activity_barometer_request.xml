<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".barometer_request"
    android:id="@+id/title">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barometer - TEXT"
        android:id="@+id/LableTextBarometer"
        android:layout_alignBaseline="@+id/TextBarometer"
        android:layout_alignBottom="@+id/TextBarometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barometer - NUMBER"
        android:id="@+id/LabelNumBarometer"
        android:layout_alignBaseline="@+id/NumberBarometer"
        android:layout_alignBottom="@+id/NumberBarometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextBarometer"
        android:enabled="false"
        android:width="350px"
        android:layout_below="@+id/NumberBarometer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumberBarometer"
        android:enabled="false"
        android:width="350px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/space2"
        android:editable="false" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/LableTextBarometer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/NumberBarometer"
        android:layout_alignEnd="@+id/NumberBarometer"
        android:id="@+id/space2" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SensorScrollList"
        android:layout_below="@+id/space"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/SensorList"
            android:id="@+id/SensorList"
            android:visibility="visible"
            android:layout_alignTop="@+id/SensorScrollList"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </ScrollView>

</RelativeLayout>
